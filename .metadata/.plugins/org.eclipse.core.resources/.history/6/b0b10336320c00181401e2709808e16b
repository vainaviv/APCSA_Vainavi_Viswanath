import java.util.Scanner;
import static java.lang.System.*;
import static java.lang.Math.*;

public class Quadratic
{
	private int a, b, c;
	private double rootOne;
	private double rootTwo;

	public Quadratic()
	{
		Scanner keyboard = new Scanner(System.in);
		
		System.out.println("Enter a :: ");
		a = keyboard.nextInt();
		
		System.out.println("Enter b :: ");
		b = keyboard.nextInt();
		
		System.out.println("Enter c :: ");
		c = keyboard.nextInt();

	}

	public Quadratic(int quadA, int quadB, int quadC)
	{
		a = quadA;
		b = quadB;
		c = quadC;

	}

	public void setEquation(int quadA, int quadB, int quadC)
	{
		rootOne = (-(double)quadB + sqrt(pow((double)quadB,2)-(4*(double)quadA*(double)quadC)))/(2*(double)quadA); 
		rootTwo = (-(double)quadB - sqrt(pow((double)quadB,2)-(4*(double)quadA*(double)quadC)))/(2*(double)quadA); 
 	}

	public void calcRoots( )
	{
		

	}

	public void print( )
	{
		System.out.printf("rootone :: %.2f",rootOne);
		System.out.printf("roottwo :: %.2f", rootTwo);

	}
}