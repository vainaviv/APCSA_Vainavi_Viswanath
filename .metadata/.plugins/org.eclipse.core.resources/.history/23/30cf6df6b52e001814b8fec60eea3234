import java.io.File;
import java.io.IOException;
import java.util.Scanner;
import static java.lang.System.*;

public class Maze
{
   private int[][] maze;

	public Maze()
	{
		maze = new int[0][0];
	}

	public Maze(int size, int[] values)
	{
		maze = new int[size][size];
		int index = 0;
		for (int i=0; i< maze.length; i++){
			for (int j=0; j< maze[0].length; j++){
				maze[i][j] = values[index];
				index ++;
			}
		}
	}

	public boolean hasExitPath(int r, int c)
	{
		if (c == maze[0].length-1){
			return true;
		}
		else{
			if (maze[r][c] == 1){
				maze[r][c] = 0;
			}
			if (r > 0 && c > 0){
				hasExitPath(r,c+1);
				hasExitPath(r,c-1);
				hasExitPath(r-1,c);
				hasExitPath(r+1,c);
			}
			else if (r==0 && c>0 && c<maze[0].length-1){
				hasExitPath(r,c+1);
				hasExitPath(r,c-1);
				hasExitPath(r+1,c);
			}
			
		}
		return false;
	}

	public String toString()
	{
		String output="";





		return output;
	}
}