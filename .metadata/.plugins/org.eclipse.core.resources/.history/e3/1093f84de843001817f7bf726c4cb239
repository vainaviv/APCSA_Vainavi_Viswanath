import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Canvas;
import java.awt.event.ActionEvent;
import java.awt.event.KeyListener;
import java.awt.event.KeyEvent;
import static java.lang.Character.*;
import java.awt.image.BufferedImage;
import java.awt.event.ActionListener;
import java.util.ArrayList;

public class OuterSpace extends Canvas implements KeyListener, Runnable
{
	private Ship ship;
	private Alien alienOne;
	private Alien alienTwo;
	private Ammo ammo;

	/* uncomment once you are ready for this part
	 *
   private AlienHorde horde;
	private Bullets shots;
	*/

	private boolean[] keys;
	private BufferedImage back;

	public OuterSpace()
	{
		setBackground(Color.black);

		keys = new boolean[5];

		//instantiate other instance variables
		//Ship, Alien
		ship = new Ship();
		alienOne = new Alien(400,50,30,30,0);
		alienTwo = new Alien(430,50,30,30,0);
		ammo = new Ammo(ship.getX(), ship.getY(), 1);

		this.addKeyListener(this);
		new Thread(this).start();

		setVisible(true);
	}

   public void update(Graphics window)
   {
	   paint(window);
   }

	public void paint( Graphics window )
	{
		//set up the double buffering to make the game animation nice and smooth
		Graphics2D twoDGraph = (Graphics2D)window;

		//take a snap shop of the current screen and same it as an image
		//that is the exact same width and height as the current screen
		if(back==null)
		   back = (BufferedImage)(createImage(getWidth(),getHeight()));

		//create a graphics reference to the back ground image
		//we will draw all changes on the background image
		Graphics graphToBack = back.createGraphics();

		graphToBack.setColor(Color.BLACK);
		graphToBack.fillRect(0,0,800,600);
		graphToBack.setColor(Color.BLUE);
		graphToBack.drawString("StarFighter ", 25, 50 );
		twoDGraph.drawImage(back, null, 0, 0);
		ship.draw(window);
		alienOne.draw(window);
		alienTwo.draw(window);

		if(keys[0] == true)
		{
			ship.move("h");
			ammo.setX(ship.getX()+ship.getWidth());
		}
		else if (keys[1] == true){
			ship.move("j");
			ammo.setX(ship.getX()+ship.getWidth());
		}
		else if (keys[2] == true){
			ship.move("u");
			ammo.setY(ship.getY());
		}
		else if (keys[3] == true){
			ship.move("n");
			ammo.setY(ship.getY());
		}
		else if (keys[4] == true){
			ammo.draw(window);
			ammo.move("UP");
			
		}

		//add code to move Ship, Alien, etc.
		//alienOne.move("RIGHT");
		//alienTwo.move("RIGHT");
		//alienOne.move("LEFT");
		//alienTwo.move("LEFT");
		//alienOne.move("DOWN");
		//alienTwo.move("DOWN");


		//add in collision detection to see if Bullets hit the Aliens and if Bullets hit the Ship
		if ((ammo.getX() == (alienOne.getX()-alienOne.getWidth()) ||
				ammo.getX() == (alienOne.getX()+alienOne.getWidth()))
				&& (ammo.getY() == (alienOne.getY()-alienOne.getHeight()) || 
				ammo.getY() == (alienOne.getY()+alienOne.getHeight()))){
			alienOne.setHeight(0);
			alienOne.setWidth(0);
			alienOne.draw(window);
		}
		else if ((ammo.getX() == (alienTwo.getX()-alienTwo.getWidth()) ||
				ammo.getX() == (alienTwo.getX()+alienTwo.getWidth()))
				&& (ammo.getY() == (alienTwo.getY()-alienTwo.getHeight()) || 
				ammo.getY() == (alienTwo.getY()+alienTwo.getHeight()))){
			alienTwo.setHeight(0);
			alienTwo.setWidth(0);
			alienTwo.draw(window);
		}
	}


	public void keyPressed(KeyEvent e)
	{
		if (e.getKeyCode() == KeyEvent.VK_H)
		{
			keys[0] = true;
		}
		if (e.getKeyCode() == KeyEvent.VK_J)
		{
			keys[1] = true;
		}
		if (e.getKeyCode() == KeyEvent.VK_U)
		{
			keys[2] = true;
		}
		if (e.getKeyCode() == KeyEvent.VK_N)
		{
			keys[3] = true;
		}
		if (e.getKeyCode() == KeyEvent.VK_SPACE)
		{
			keys[4] = true;
		}
		repaint();
	}

	public void keyReleased(KeyEvent e)
	{
		if (e.getKeyCode() == KeyEvent.VK_H)
		{
			keys[0] = false;
		}
		if (e.getKeyCode() == KeyEvent.VK_J)
		{
			keys[1] = false;
		}
		if (e.getKeyCode() == KeyEvent.VK_U)
		{
			keys[2] = false;
		}
		if (e.getKeyCode() == KeyEvent.VK_N)
		{
			keys[3] = false;
		}
		if (e.getKeyCode() == KeyEvent.VK_SPACE)
		{
			keys[4] = false;
		}
		repaint();
	}

	public void keyTyped(KeyEvent e)
	{
      //no code needed here
	}

   public void run()
   {
   	try
   	{
   		while(true)
   		{
   		   Thread.currentThread().sleep(5);
            repaint();
         }
      }catch(Exception e)
      {
      }
  	}
}

